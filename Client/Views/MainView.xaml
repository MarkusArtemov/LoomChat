<Page x:Class="De.Hsfl.LoomChat.Client.Views.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:De.Hsfl.LoomChat.Client.ViewModels"
      xmlns:converter="clr-namespace:De.Hsfl.LoomChat.Client.Converter"
      Title="MainView"
      Loaded="MainViewLoaded">

    <!-- 1) DataContext -->
    <Page.DataContext>
        <local:MainViewModel />
    </Page.DataContext>

    <!-- 2) Resources -->
    <Page.Resources>

        <!-- BoolToVisibilityConverter -->
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- 1) My Text Message (Right Bubble) -->
        <DataTemplate x:Key="MyTextMessageTemplate">
            <Border Background="#DCF8C6"
                    Padding="10"
                    Margin="10"
                    CornerRadius="10"
                    HorizontalAlignment="Right">
                <StackPanel>
                    <TextBlock Text="Ich"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <!-- Text -->
                    <TextBlock Text="{Binding Content}" />
                    <!-- Time -->
                    <TextBlock Text="{Binding SentAt, StringFormat=HH:mm:ss}"
                               FontSize="10"
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- 2) Other Text Message (Left Bubble) -->
        <DataTemplate x:Key="OtherTextMessageTemplate">
            <Border Background="LightGray"
                    Padding="10"
                    Margin="10"
                    CornerRadius="10"
                    HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock Text="{Binding SenderUserId}"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Content}" />
                    <TextBlock Text="{Binding SentAt, StringFormat=HH:mm:ss}"
                               FontSize="10"
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- 3) Poll Message -->
        <DataTemplate x:Key="PollMessageTemplate">
            <Border Background="#FFE4B5"
                    Padding="10"
                    Margin="10"
                    CornerRadius="10"
                    HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock Text="Umfrage:"
                               FontWeight="Bold"
                               FontSize="14"/>
                    <TextBlock Text="{Binding PollTitle}"
                               Margin="0,0,0,5"
                               FontWeight="Bold"/>

                    <!-- Voting Panel -->
                    <StackPanel x:Name="VotingPanel">
                        <ListBox x:Name="OptionList"
                                 ItemsSource="{Binding PollOptions}"
                                 SelectionMode="Single"
                                 Margin="0,5,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <!-- Each entry as a RadioButton -->
                                    <RadioButton Content="{Binding}"
                                                 Margin="5,0"
                                                 IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem},
                                                                     Path=IsSelected,
                                                                     Mode=TwoWay}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Button Content="Vote"
                                Margin="0,5,0,0"
                                Command="{Binding DataContext.VotePollCommand, 
                                          RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding SelectedItem, ElementName=OptionList}" />
                    </StackPanel>

                    <!-- Results Panel -->
                    <StackPanel x:Name="ResultsPanel" Margin="0,5,0,0" Visibility="Collapsed">
                        <ItemsControl ItemsSource="{Binding PollOptions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Diese Umfrage ist geschlossen."
                                   Foreground="Red"
                                   Margin="5,5,0,0"
                                   Visibility="{Binding IsClosed,
                                        Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Time -->
                    <TextBlock Text="{Binding SentAt, StringFormat=HH:mm:ss}"
                               FontSize="10"
                               HorizontalAlignment="Right"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Triggers: Hide voting panel if user voted or poll is closed -->
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding HasUserVoted}" Value="True">
                    <Setter TargetName="VotingPanel" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="ResultsPanel" Property="Visibility" Value="Visible" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsClosed}" Value="True">
                    <Setter TargetName="VotingPanel" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="ResultsPanel" Property="Visibility" Value="Visible" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- 4) MessageTemplateSelector -->
        <converter:MessageTemplateSelector
            x:Key="MessageTemplateSelector"
            MyTextMessageTemplate="{StaticResource MyTextMessageTemplate}"
            OtherTextMessageTemplate="{StaticResource OtherTextMessageTemplate}"
            PollMessageTemplate="{StaticResource PollMessageTemplate}" />
    </Page.Resources>

    <!-- 3) Main Layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Padding="10" Background="#E8E8E8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="LoomChat"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            VerticalAlignment="Center">
                    <!-- Load Poll Plugin Button -->
                    <Button Content="Load Poll Plugin"
                            Command="{Binding LoadPollPluginCommand}"
                            Width="130"
                            Height="30"
                            Margin="0,0,10,0"/>

                    <!-- Load BlackList Plugin Button -->
                    <Button Content="Load BlackList Plugin"
                            Command="{Binding LoadBlackListPluginCommand}"
                            Width="150"
                            Height="30"
                            Margin="0,0,10,0"/>

                    <!-- Logout Button -->
                    <Button Content="Logout"
                            Command="{Binding LogoutCommand}"
                            Width="100"
                            Height="30"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Left Column: DMs, Channels, Users -->
        <Border Grid.Row="1" Grid.Column="0" Background="#F4F4F4" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Direct Messages -->
                <GroupBox Grid.Row="0" Header="Direktnachrichten" Margin="0,0,0,10">
                    <ListView ItemsSource="{Binding DirectMessages}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              MouseDoubleClick="ChannelListViewMouseDoubleClick">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontSize="14"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </GroupBox>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Channel erstellen"
                            Command="{Binding OpenPopupCommand}"
                            Width="120"
                            Height="30"/>
                </StackPanel>

                <!-- Channels -->
                <GroupBox Grid.Row="2" Header="Channels" Margin="0,10,0,10">
                    <ListView ItemsSource="{Binding OpenChats}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              MouseDoubleClick="ChannelListViewMouseDoubleClick">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontSize="14"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </GroupBox>

                <!-- Users -->
                <GroupBox Grid.Row="3" Header="User">
                    <ListView ItemsSource="{Binding Users}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              MouseDoubleClick="UsersListViewMouseDoubleClick">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Username}" FontSize="14"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </GroupBox>
            </Grid>
        </Border>

        <!-- Right Column: Tabs -->
        <Border Grid.Row="1" Grid.Column="1" Padding="10" Background="#F8F8F8">
            <TabControl>
                <!-- Tab: Chat -->
                <TabItem Header="Chat">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Message List -->
                        <ScrollViewer Grid.Row="0"
                                      VerticalScrollBarVisibility="Auto"
                                      Visibility="{Binding ChatVisible,
                                        Converter={StaticResource BoolToVisibilityConverter}}">
                            <ItemsControl ItemsSource="{Binding SelectedChannel.ChatMessages}"
                                          ItemTemplateSelector="{StaticResource MessageTemplateSelector}" />
                        </ScrollViewer>

                        <!-- Fallback: No Channel Selected -->
                        <TextBlock Text="Bitte wähle einen Chat aus."
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Visibility="{Binding IsChatNotVisible,
                                        Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Input Bar -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBox Text="{Binding NewMessage}"
                                     VerticalAlignment="Center"
                                     Width="400"
                                     Margin="0,0,10,0"/>
                            <Button Content="Senden"
                                    Command="{Binding SendMessageCommand}"
                                    Width="80"
                                    Margin="0,0,10,0" />

                            <!-- Show "Umfrage erstellen" only if PollPlugin is loaded -->
                            <Button Content="Umfrage erstellen"
                                    Command="{Binding OpenPollPopupCommand}"
                                    Width="120"
                                    Visibility="{Binding IsPollPluginLoaded,
                                        Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Tab: Files -->
                <TabItem Header="Dateien">
                    <Grid>
                        <TextBlock Text="Bitte wähle einen Chat aus."
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Visibility="{Binding IsChatNotVisible,
                                        Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <Grid Visibility="{Binding ChatVisible,
                                          Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- File Buttons -->
                            <StackPanel Orientation="Horizontal" Grid.Row="0">
                                <Button Content="Neues Dokument"
                                        Command="{Binding CreateDocumentCommand}"
                                        Margin="0,0,10,0"/>
                                <Button Content="Upload Version"
                                        Command="{Binding UploadVersionCommand}"
                                        Margin="0,0,10,0"/>
                                <Button Content="Download Version"
                                        Command="{Binding DownloadVersionCommand}"
                                        Margin="0,0,10,0"/>
                                <Button Content="Delete Version"
                                        Command="{Binding DeleteVersionCommand}"
                                        Margin="0,0,10,0"/>
                                <Button Content="Delete Document"
                                        Command="{Binding DeleteDocumentCommand}"
                                        Margin="0,0,10,0"/>
                            </StackPanel>

                            <!-- Documents -->
                            <GroupBox Header="Dokumente" Grid.Row="1" Margin="0,5,0,5">
                                <ListView ItemsSource="{Binding Documents}"
                                          SelectedItem="{Binding SelectedDocument}"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" />
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </GroupBox>

                            <!-- Versions -->
                            <GroupBox Header="Versionen" Grid.Row="2">
                                <ListView ItemsSource="{Binding Versions}"
                                          SelectedItem="{Binding SelectedVersion}"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <Run Text="Version: "/>
                                                <Run Text="{Binding VersionNumber}"/>
                                                <Run Text=" | "/>
                                                <Run Text="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm:ss}" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </GroupBox>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>

        <!-- Popup: Create Channel -->
        <Popup x:Name="CreateChannelPopup"
               Placement="Center"
               IsOpen="{Binding PopupOpen}"
               StaysOpen="False">
            <Border Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="20"
                    Width="300">
                <StackPanel>
                    <TextBlock Text="Neuen Channel erstellen"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <TextBox Text="{Binding NewChannelName}" Width="300" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Abbrechen"
                                Command="{Binding ClosePopupCommand}"
                                Width="80"
                                Margin="5"/>
                        <Button Content="Erstellen"
                                Command="{Binding CreateChannelCommand}"
                                Width="80"
                                Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Popup: Create Poll -->
        <Popup x:Name="PollCreatePopup"
               Placement="Center"
               IsOpen="{Binding PollPopupOpen}"
               StaysOpen="False">
            <Border Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="20"
                    Width="400">
                <StackPanel>
                    <TextBlock Text="Neue Umfrage erstellen"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Titel:"/>
                    <TextBox Text="{Binding PollTitle}"
                             Width="300"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Antwortoptionen:"/>
                    <ListBox ItemsSource="{Binding PollOptions}"
                             Height="100"
                             Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox Text="{Binding NewOptionText}"
                                 Width="200"
                                 Margin="0,0,10,0"/>
                        <Button Content="Option hinzufügen"
                                Command="{Binding AddPollOptionCommand}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Abbrechen"
                                Command="{Binding ClosePollPopupCommand}"
                                Width="80"
                                Margin="5"/>
                        <Button Content="Erstellen"
                                Command="{Binding CreatePollCommand}"
                                Width="80"
                                Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

    </Grid>
</Page>
