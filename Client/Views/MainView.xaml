<Page x:Class="De.Hsfl.LoomChat.Client.Views.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:De.Hsfl.LoomChat.Client.ViewModels"
      xmlns:converter="clr-namespace:De.Hsfl.LoomChat.Client.Converter"
      Title="MainView"
      Loaded="MainViewLoaded">

    <!-- 1) Datenkontext -->
    <Page.DataContext>
        <local:MainViewModel />
    </Page.DataContext>

    <!-- 2) Ressourcen -->
    <Page.Resources>
        <!-- Für generelle "sichtbar / versteckt" je nach bool -->
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Drei MultiValue-Converter für Polls -->
        <converter:PollPluginMissingVisibilityConverter x:Key="PollPluginMissingVisibilityConverter" />
        <converter:PollVoteVisibilityConverter x:Key="PollVoteVisibilityConverter" />
        <converter:PollResultsVisibilityConverter x:Key="PollResultsVisibilityConverter" />

        <!-- Meine Textnachricht -->
        <DataTemplate x:Key="MyTextMessageTemplate">
            <Border Background="#DCF8C6"
                    Padding="10"
                    Margin="10"
                    CornerRadius="10"
                    HorizontalAlignment="Right">
                <StackPanel>
                    <TextBlock Text="Ich" FontWeight="Bold" Margin="0,0,0,5" />
                    <TextBlock Text="{Binding Content}" />
                    <TextBlock Text="{Binding SentAt, StringFormat=HH:mm:ss}" 
                               FontSize="10" HorizontalAlignment="Right" />
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Fremde Textnachricht -->
        <DataTemplate x:Key="OtherTextMessageTemplate">
            <Border Background="LightGray"
                    Padding="10"
                    Margin="10"
                    CornerRadius="10"
                    HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock Text="{Binding SenderUserId}" FontWeight="Bold" Margin="0,0,0,5" />
                    <TextBlock Text="{Binding Content}" />
                    <TextBlock Text="{Binding SentAt, StringFormat=HH:mm:ss}" 
                               FontSize="10" HorizontalAlignment="Right" />
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- PollMessageTemplate -->
        <DataTemplate x:Key="PollMessageTemplate">
            <Border Background="#FFE4B5"
                    Padding="10"
                    Margin="10"
                    CornerRadius="10"
                    HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock Text="Umfrage:" FontWeight="Bold" FontSize="14" />
                    <TextBlock Text="{Binding PollTitle}" Margin="0,0,0,5" FontWeight="Bold" />

                    <!-- Bereich 1: Plugin fehlt -->
                    <StackPanel x:Name="PluginMissingSection">
                        <StackPanel.Visibility>
                            <MultiBinding Converter="{StaticResource PollPluginMissingVisibilityConverter}">
                                <!-- Braucht nur IsPollPluginLoaded -->
                                <Binding Path="DataContext.IsPollPluginLoaded"
                                         RelativeSource="{RelativeSource AncestorType=Page}" />
                            </MultiBinding>
                        </StackPanel.Visibility>
                        <TextBlock Text="Bitte Poll-Plugin installieren, um an dieser Umfrage teilzunehmen."
                                   Foreground="Gray" FontStyle="Italic" Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Bereich 2: Abstimmen -->
                    <StackPanel x:Name="VoteSection">
                        <StackPanel.Visibility>
                            <MultiBinding Converter="{StaticResource PollVoteVisibilityConverter}">
                                <!-- 3 bool: [0] IsPollPluginLoaded, [1] IsClosed, [2] HasUserVoted -->
                                <Binding Path="DataContext.IsPollPluginLoaded"
                                         RelativeSource="{RelativeSource AncestorType=Page}" />
                                <Binding Path="IsClosed" />
                                <Binding Path="HasUserVoted" />
                            </MultiBinding>
                        </StackPanel.Visibility>

                        <TextBlock Text="Bitte wähle eine Option:"/>
                        <ListBox x:Name="OptionList"
                                 ItemsSource="{Binding PollOptions}"
                                 SelectionMode="Single"
                                 Margin="0,5,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Content="{Binding}" Margin="5,0" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Button Content="Abstimmen"
                                Margin="0,5,0,0"
                                Command="{Binding DataContext.VotePollCommand,
                                          RelativeSource={RelativeSource AncestorType=StackPanel}}"
                                CommandParameter="{Binding SelectedItem, ElementName=OptionList}" />
                    </StackPanel>

                    <!-- Bereich 3: Ergebnisse -->
                    <StackPanel x:Name="ResultsSection">
                        <StackPanel.Visibility>
                            <MultiBinding Converter="{StaticResource PollResultsVisibilityConverter}">
                                <!-- 2 bool: [0] IsClosed, [1] HasUserVoted -->
                                <Binding Path="IsClosed" />
                                <Binding Path="HasUserVoted" />
                            </MultiBinding>
                        </StackPanel.Visibility>

                        <TextBlock Text="Ergebnisse:" FontWeight="Bold" />
                        <ItemsControl ItemsSource="{Binding PollOptions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="0,2,0,0"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Uhrzeit -->
                    <TextBlock Text="{Binding SentAt, StringFormat=HH:mm:ss}"
                               FontSize="10"
                               HorizontalAlignment="Right"
                               Margin="0,8,0,0" />
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- TemplateSelector, entscheidet zwischen My/Other/Poll -->
        <converter:MessageTemplateSelector x:Key="MessageTemplateSelector"
            MyTextMessageTemplate="{StaticResource MyTextMessageTemplate}"
            OtherTextMessageTemplate="{StaticResource OtherTextMessageTemplate}"
            PollMessageTemplate="{StaticResource PollMessageTemplate}" />
    </Page.Resources>

    <!-- 3) Hauptlayout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>

        <!-- Kopfzeile -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Padding="10" Background="#E8E8E8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="LoomChat" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" />

                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                    <Button Content="Load Poll Plugin"
                            Command="{Binding LoadPollPluginCommand}"
                            Width="130" Height="30" Margin="0,0,10,0"/>
                    <Button Content="Logout"
                            Command="{Binding LogoutCommand}"
                            Width="100" Height="30"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Linke Spalte -->
        <Border Grid.Row="1" Grid.Column="0" Background="#F4F4F4" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Direktnachrichten -->
                <GroupBox Grid.Row="0" Header="Direktnachrichten" Margin="0,0,0,10">
                    <ListView ItemsSource="{Binding DirectMessages}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              MouseDoubleClick="ChannelListViewMouseDoubleClick">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontSize="14"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </GroupBox>

                <!-- Button: Channel erstellen -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Channel erstellen"
                            Command="{Binding OpenPopupCommand}"
                            Width="120"
                            Height="30"/>
                </StackPanel>

                <!-- Channels -->
                <GroupBox Grid.Row="2" Header="Channels" Margin="0,10,0,10">
                    <ListView ItemsSource="{Binding OpenChats}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              MouseDoubleClick="ChannelListViewMouseDoubleClick">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontSize="14"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </GroupBox>

                <!-- User -->
                <GroupBox Grid.Row="3" Header="User">
                    <ListView ItemsSource="{Binding Users}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              MouseDoubleClick="UsersListViewMouseDoubleClick">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Username}" FontSize="14"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </GroupBox>
            </Grid>
        </Border>

        <!-- Rechte Spalte: Tabs -->
        <Border Grid.Row="1" Grid.Column="1" Padding="10" Background="#F8F8F8">
            <TabControl>
                <!-- Tab: Chat -->
                <TabItem Header="Chat">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Nachrichtenliste -->
                        <ScrollViewer Grid.Row="0"
                                      VerticalScrollBarVisibility="Auto"
                                      Visibility="{Binding ChatVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ItemsControl ItemsSource="{Binding SelectedChannel.ChatMessages}"
                                          ItemTemplateSelector="{StaticResource MessageTemplateSelector}" />
                        </ScrollViewer>

                        <!-- Kein Channel ausgewählt? -->
                        <TextBlock Text="Bitte wähle einen Chat aus."
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Visibility="{Binding IsChatNotVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Eingabebereich -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBox Text="{Binding NewMessage}"
                                     VerticalAlignment="Center"
                                     Width="400"
                                     Margin="0,0,10,0"/>
                            <Button Content="Senden"
                                    Command="{Binding SendMessageCommand}"
                                    Width="80"
                                    Margin="0,0,10,0" />

                            <!-- Umfrage erstellen nur sichtbar, wenn Plugin geladen -->
                            <Button Content="Umfrage erstellen"
                                    Command="{Binding OpenPollPopupCommand}"
                                    Width="120"
                                    Visibility="{Binding IsPollPluginLoaded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Tab: Dateien -->
                <TabItem Header="Dateien">
                    <!-- Hier dein Datei-Bereich (Dokumente, Versionen etc.) -->
                    <!-- ... -->
                </TabItem>
            </TabControl>
        </Border>

        <!-- Popup: Channel erstellen -->
        <Popup x:Name="CreateChannelPopup"
               Placement="Center"
               IsOpen="{Binding PopupOpen}"
               StaysOpen="False">
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="20" Width="300">
                <StackPanel>
                    <TextBlock Text="Neuen Channel erstellen" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding NewChannelName}" Width="300" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Abbrechen" Command="{Binding ClosePopupCommand}" Width="80" Margin="5"/>
                        <Button Content="Erstellen" Command="{Binding CreateChannelCommand}" Width="80" Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Popup: Umfrage erstellen -->
        <Popup x:Name="PollCreatePopup"
               Placement="Center"
               IsOpen="{Binding PollPopupOpen}"
               StaysOpen="False">
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="20" Width="400">
                <StackPanel>
                    <TextBlock Text="Neue Umfrage erstellen" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="Titel:"/>
                    <TextBox Text="{Binding PollTitle}" Width="300" Margin="0,0,0,10"/>

                    <TextBlock Text="Antwortoptionen:"/>
                    <ListBox ItemsSource="{Binding PollOptions}" Height="100" Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Option hinzufuegen -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox Text="{Binding NewOptionText}" Width="200" Margin="0,0,10,0"/>
                        <Button Content="Option hinzufügen"
                                Command="{Binding AddPollOptionCommand}"/>
                    </StackPanel>

                    <!-- Action-Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Abbrechen"
                                Command="{Binding ClosePollPopupCommand}"
                                Width="80" Margin="5"/>
                        <Button Content="Erstellen"
                                Command="{Binding CreatePollCommand}"
                                Width="80" Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Page>
